<div class="panel panel-default">
 <div class="panel-heading">
    <div class="row">
      <div class="col-md-10"><h2><%= @organization.name %></h2></div>
      <div class="col-md-2"><a class="btn btn-primary btn-md button" style="float:right"> Donate </a></div>
    </div>
  </div>
<div class="panel-body">
<p><strong>Service Type</strong></br>
  <%= @organization.category %></p>

<p><strong>Eras We Serve</strong></br>
  <%= @organization.era_served %></p>

<p><strong>Mission Statement</strong></br>
  <%= @organization.description %></p>

<p><strong>Rating</strong></br>
  <%= @reviews.average(:rating).round(1) %></p>

<!-- avg_rating = review.rating.map.inject { |sum, el| sum + el }.to_f / rating.size -->

